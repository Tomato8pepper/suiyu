.container{
    width: 100%;
    height: 600px;
    background-color: #fff;
    position: relative;
}
.head{
    width: 100%;
    height: 250px;
    background-color: #f5fafe;
    position: relative;
}
.head-bgc{
    width: 100%;
    height: 70px;
}
.head-user-picture{
    width: 65px;
    height: 65px;
    position: absolute;              
    border-radius: 50%;
    overflow: hidden;
    text-align: left;
    left: 155px;
    top: 30px;
}
.user-picture{
    width: 100%;
    height: 100%;
}
.content {
    color: #0d0d0d;
    width: 100%;
    height: 75px;
    position: absolute;
    text-align: center;
}
.head-user-name {
    margin-top: 25px;
}
.content-cgl {
    font-size: 20px;
    margin-top: 5px;
}
.content-money{
    width: 375px;
    height: 30px;
}
.money{
    font-size: 28px;
    margin-top: 5px;
    display: inline-block;
}
.unit {
    font-size: 10px;
    display: inline-block;
    margin-left: 5px;
}
.interactive{
    width: 375px;
    height: 30px;
    font-size: 16px;
    color: #48a6fd;
    position: absolute;
    top: 220px;
    text-align: center;
}
.record{
    display: inline-block;
    position: absolute;
    left: 12px;
}
.withdrawal{
    display: inline-block;
    text-align: center;
}
.forward{
    display: inline-block;
    position: absolute;
    right: 10px;
}
.receive_rec{
    top: 210px;
    width: 375px;
    position: absolute;
    bottom: 230px;
}
.receive_count{
    font-size: 14px;
    height: 30px;
    width: 100%;
    margin-top: 50px;
    padding-left: 12px;

    color: #a2a2a2;
    border-bottom: 1px solid #aaa;
    
}
.recipient{
    margin: 10px;
    width: 100%;
    border-bottom: 1px solid #aaa;


}
.break {
    color: #3f3f3f;
    display: inline-block;
}
.user {
    color: #a2a2a2;
    display: inline-block;
    margin-left: 10px;
}
.date {
    margin: 5px;
    font-size: 12px;
    color: #a2a2a2;
}