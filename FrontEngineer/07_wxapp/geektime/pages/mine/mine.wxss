/* pages/mine/mine.wxss */
.mine{
    height: 100vh;
}
.mine-header{
    height: 400rpx;
    text-align: center;
    border-bottom: 30rpx solid #dbdbdb;
}
.mine-header_pic{
    height: 185rpx;
    width: 185rpx;
    margin: 0 auto;
    padding: 50rpx;
    background-color: #fff;
    border-radius: 50%;
}
.mine-header_pic image{
    width: 100%;
    height: 100%;
}
.span{
    letter-spacing: 2rpx;
}
.sign{
    font-size: 35rpx;
}
.sign_discount{
    display: block;
    color: red;
    margin-top: 10rpx;
    font-size: 30rpx;
    letter-spacing: 2rpx;
}
.mine-body{
    height: 60%;
}
.describe{
    position: relative;
    height: 95rpx;
    line-height: 95rpx;
    margin-left: 30rpx;
    border-bottom: 1px solid #aaa;
}
.describe-pic{
    width: 35rpx;
    height: 35rpx;
    
}
.describe-word{
    margin: 0 30rpx;
}
.describe-arrow{
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
}
.invite{
    margin: 0;
    border-bottom: 30rpx solid #dbdbdb;
}
.invite-pic{
    width: 35rpx;
    height: 35rpx;
    padding-left: 30rpx;   
}
.invite-word{
    margin: 0 30rpx;
}

.invite-arrow{
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
}
.describe-invite{
    margin-left: 320rpx;
    font-size: 22rpx;
}
